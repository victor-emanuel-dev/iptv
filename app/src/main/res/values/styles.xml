<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- REMOVEMOS A DUPLICAÇÃO DE Theme.CinemaElitePlayer -->
    <!-- O tema base está apenas em themes.xml -->

    <!-- Estilo base Widget.CinemaElitePlayer que estava faltando -->
    <style name="Widget.CinemaElitePlayer" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Tema sem ActionBar -->
    <style name="Theme.CinemaElitePlayer.NoActionBar" parent="Theme.CinemaElitePlayer">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- TEMA PARA TELA CHEIA (STREAMING) -->
    <style name="Theme.CinemaElitePlayer.Fullscreen" parent="Theme.CinemaElitePlayer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- TEMA PARA POP-UP PREMIUM -->
    <style name="Theme.CinemaElitePlayer.Dialog" parent="Theme.CinemaElitePlayer">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- TEMA PARA SPLASH SCREEN - ADICIONADO -->
    <style name="Theme.CinemaElitePlayer.Splash" parent="Theme.CinemaElitePlayer">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Estilo para campos de entrada - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <!-- Estilo para botões primários - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.Button" parent="Widget.CinemaElitePlayer">
        <!-- Herda do estilo base -->
    </style>

    <style name="Widget.CinemaElitePlayer.Button.Primary" parent="Widget.CinemaElitePlayer.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Estilo para botões secundários - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/secondary_color</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- ESTILO PARA BOTÃO PREMIUM -->
    <style name="Widget.CinemaElitePlayer.Button.Premium" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- ESTILO PARA BOTÃO WHATSAPP -->
    <style name="Widget.CinemaElitePlayer.Button.WhatsApp" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/whatsapp_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- ESTILO PARA BOTÃO TELEGRAM -->
    <style name="Widget.CinemaElitePlayer.Button.Telegram" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/telegram_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Estilo para cards - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo para texto de título - MATERIAL 3 -->
    <style name="TextAppearance.CinemaElitePlayer.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para texto de subtítulo - MATERIAL 3 -->
    <style name="TextAppearance.CinemaElitePlayer.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Estilo para player - FUNDO PRETO -->
    <style name="Widget.CinemaElitePlayer.Player">
        <item name="android:background">@color/player_background</item>
    </style>

    <!-- Estilo para painel lateral - COR #262625 -->
    <style name="Widget.CinemaElitePlayer.SidePanel">
        <item name="android:background">@color/panel_background</item>
    </style>

    <!-- Estilo para ImageButton - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.ImageButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Estilo para TextView - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para CheckBox - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/primary_color</item>
    </style>

    <!-- Estilo para RadioButton - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/primary_color</item>
    </style>

    <!-- Estilo para EditText - MATERIAL 3 -->
    <style name="Widget.CinemaElitePlayer.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/input_background</item>
    </style>
</resources>